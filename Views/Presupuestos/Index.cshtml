@model IEnumerable<Presupuestos>

@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<h2 class="mt-4">Listado de Presupuestos</h2>

<p>
    <a asp-controller="Presupuestos" asp-action="Create" class="btn btn-success">Crear Nuevo Presupuesto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.idPresupuesto)</th>
            <th>@Html.DisplayNameFor(model => model.NombreDestinatario)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>Monto Total (c/IVA)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.idPresupuesto</td>
                <td>@Html.DisplayFor(modelItem => item.NombreDestinatario)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-idP="@item.idPresupuesto">Editar</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-idP="@item.idPresupuesto">Detalles</a> |
                    <a class="btn btn-danger" asp-action="Eliminar" asp-route-idP="@item.idPresupuesto">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>