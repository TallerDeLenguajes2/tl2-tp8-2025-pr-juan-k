@using MVC.ViewModels
@model AgregarProductoViewModel

@{
    ViewData["Title"] = "Agregar Producto al Presupuesto";
}

<h2>Agregar Producto al Presupuesto Nro @Model.idPresupuesto</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AgregarProducto">
            
            <input type="hidden" asp-for="idPresupuesto" />

            <div class="form-group">
                <label asp-for="idProducto" class="control-label"></label>
                <select asp-for="idProducto"class="form-control">
                <option value="">--seleccione un producto--</option>
                @if(Model.ListaProductos != null && Model.ListaProductos.Count > 0)
                {
                    @foreach(var item in Model.ListaProductos)
                    {
                        <option value="@item.idProducto">@item.Descripcion (@item.Precio.ToString("C"))</option>
                    }
                }else
                {
                    <h5>Este presupuesto no contiene productos</h5>
                }
                    
                </select>
                <span asp-validation-for="idProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span> 
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="AÃ±adir Producto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-danger" asp-action="Details" asp-route-idP="@Model.idPresupuesto">Volver al Presupuesto</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}